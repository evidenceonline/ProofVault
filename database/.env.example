# ProofVault Database Configuration
# Copy this file to .env and fill in your values

# Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=proofvault_dev
DB_USER=proofvault
DB_PASSWORD=proofvault_password

# Admin Database Connection (for setup)
DB_ADMIN_USER=postgres
DB_ADMIN_PASSWORD=postgres

# Test Database
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=proofvault_test
TEST_DB_USER=proofvault
TEST_DB_PASSWORD=proofvault_password

# SSL Configuration
DB_SSL=false

# Backup Configuration
BACKUP_STORAGE_PATH=./backups
BACKUP_RETENTION_DAYS=30

# PostgreSQL Binary Paths (usually auto-detected)
PG_DUMP_PATH=pg_dump
PG_RESTORE_PATH=pg_restore

# Environment
NODE_ENV=development

# Performance Settings (Production Only)
# DB_MAX_CONNECTIONS=100
# DB_WORK_MEM=256MB
# DB_SHARED_BUFFERS=512MB