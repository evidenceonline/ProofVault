{
  "manifest_version": 3,
  "name": "ProofVault",
  "version": "1.0",
  "description": "Take screenshots and create proof PDFs with company and user information",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://proofvault.net:3001/*",
    "http://proofvault:3001/*",
    "http://localhost:3001/*",
    "https://api.proofvault.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ProofVault"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}